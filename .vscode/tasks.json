{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start React Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "javascript",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Compiling.*",
          "endsPattern": ".*Compiled successfully.*"
        }
      }
    }
  ]
}